<h1>Organizers</h1>

<% if @organizers.present? %>
	<div class="table-responsive">
	  <table class="table table-hover table-striped">
	  		<tr>
	  			<th>Id</th>
	  			<th>Created at</th>
	  			<th>Name</th>
	  			<th>Email</th>
	  			<th>Project</th>
	  		</tr>
			<% @organizers.each do |organizer| %>
			<tr>
				<td><%= organizer.id %></td>
				<td><%= organizer.created_at.strftime("%m/%d/%Y") %></td>
				<td><%= link_to organizer.name, hq_organizer_path(organizer.id) %></td>
				<td> <a href="mailto:<%= organizer.email %>"><%= organizer.email %></a></td>
				<td><%= link_to organizer.project.title, hq_project_path(organizer.project.id)%></td>
			</tr>
			<% end %>
	 </table>
	</div>    
	<% else %>
	<div class="alert alert-info" role="alert">
		<strong>No organizers created</strong>
	</div>
<% end %>