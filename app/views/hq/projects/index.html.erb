<h1>Projects</h1>

<% if @projects.present? %>
	<div class="table-responsive">
	  <table class="table table-hover table-striped">
	  		<tr>
	  			<th>Id</th>
	  			<th>Created at</th>
	  			<th>Title</th>
	  			<th>Organizer</th>
	  			<th>Media assets</th>
	  			<th>Actions</th>
	  		</tr>
	  	<% @projects.each do |project| %>
	  		<tr>
	  			<td><%= project.id %></td>
	  			<td><%= project.created_at.strftime("%m/%d/%Y") %></td>
	  			<td><%= project.title %></td>
	  			<td><%= link_to project.organizer.name, hq_organizer_path(project.organizer.id) %> </td>
	  			<td><%= project.project_assets.count %></td>
	  			<td style="min-width:160px; width:160px">
					<%= button_to('Destroy', hq_project_path(project.id), method: "delete", remote: false, class:"btn btn-danger btn-sm pull-right", data: { confirm: 'Are you sure?', disable_with: 'loading...' }) %>
					<%= link_to "view", hq_project_path(project.id), class:"btn btn-info btn-sm pull-left" %>
	  			</td>
	  		</tr>
	  	<% end %>
	 </table>
	</div>  
	<% else %>
	<div class="alert alert-info" role="alert">
		<strong>No projects created</strong>
	</div>
<% end %>