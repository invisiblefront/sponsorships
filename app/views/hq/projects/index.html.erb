<h1>Projects</h1>
<% if @projects.present? %>
<ul class="list-group">
	<% @projects.each do |project| %>
		<li class="list-group-item">
			<div class="row">
				<div class="col-md-9">
					<span class="label label-default"><%= project.id %>th</span> Project, called 
					<%= link_to project.title, hq_project_path(project.id), class:"btn btn-sm btn-info" %> created by 
					<%= link_to project.organizer.name, hq_organizer_path(project.organizer.id), class:"btn btn-primary" %> 
				</div>
				<div class="col-md-3">
					you can 
					<%= link_to "delete", hq_project_path(project.id),method: :delete, class:"btn btn-sm btn-danger" %>
					<%= link_to "view", hq_project_path(project.id), class:"btn btn-sm btn-info" %>
				</div>
			</div>
		</li>
	<% end %>	
</ul>
<% else %>
<div class="alert alert-info" role="alert">
	<strong>No projects created</strong>
</div>
<% end %>