<h1>New project setup</h1>  

<hr>

<section id="project-setup-1" >

  <h3>1. Who will be owner of this project?</h3>	

  		<% if params[:organizer_id].present? %>
	    <ul class="list-group" style="width:300px">
		   
		      <li class="list-group-item">
		      id: <span id="param_organizer_id"><%= @organizer_id %></span><br>
		      name: <span id="param_organizer_name"><%= @organizer_name %></span><br>
		      email: <span id="param_organizer_email"><%= @organizer_email %></span>
		      </li>
		</ul>
		<% else %>
		    <%= form_for(:organizer, url: hq_organizers_path, remote: false, html: { class: "" }) do |f| %>
			  <fieldset class="form-inline">
			      <%= f.text_field :name,class:"form-control", placeholder:"Project owner name" %>
			      <%= f.email_field :email,class:"form-control", placeholder:"Project owner email" %>
			      <%= f.password_field :password, class:"form-control" %>
			      <%= f.submit "Add project organizer", class:"btn btn-info-outline" %>
			  </fieldset>
		   <% end %>
	   <% end %>

</section>

<% if params[:organizer_id].present?  %>
<br>
	<section id="project-setup-2">
		<h3>2. How will the sponsoring project be called</h3>	
		<h4 style="display:none">It will be called: <small></small></h4>	

		<%= form_for(:project, url: hq_projects_path, remote: false, html: { class: "" }) do |f| %>
		  <fieldset class="form" style="max-width:400px">
		      <%= f.label "Project title", class:"sr-only" %>
		      <%= f.text_field :title,class:"form-control", placeholder:"Project title" %><br>
		      <%= f.text_field :description,class:"form-control", placeholder:"Project description" %><br>
				<label class="file">
				  <%= f.file_field :banner %>
				  <span class="file-custom"></span>
				</label>
		      <%= f.hidden_field :organizer_id,class:"form-control" %>
		      <button type="submit" class="btn btn-info">Create project</button>
		  </fieldset>
		  <hr>

		<% end %>
	</section>
<% end %>





<script>

	$(document).ready(function(){

		if($("#param_organizer_id").html()!=""){
		 	$("#project_organizer_id").val($("#param_organizer_id").html());
		}
	})


</script>