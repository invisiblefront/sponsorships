<% if sponsor_signed_in? %>
	<div class="row">
		<div class="col-md-4">
			<div class="card text-center">
			  <div class="card-header">
			  	<h4 class="card-title">Hi, <%= current_sponsor.name %></h4>
			  </div>
			  <div class="card-block">
			    <p class="card-text">Your profile info</p>
			    <a href="#" class="btn btn-primary">Change</a>
			  </div>
			</div>
		</div>
	</div><br>


	<h2>Projects you are backing:</h2>	
	<hr>
	<div class="row">

		<% current_sponsor.projects.each do |project| %>
			<div class="col-md-4">
				<div class="card text-center">
				  <div class="card-header">
				  	<h4 class="card-title"><%= project.title %></h4>
				  </div>
			      <% if project.banner.present? %>
			      	<%= image_tag(project.banner, class:"card-img-top",style:"width:100%") %>
			      <% else %>
			      	<%= image_tag("project_placeholder.jpg", class:"card-img-top",style:"width:100%") %>
			      <% end %>
				  <div class="card-block">
				    <p class="card-text"><%= project.description %></p>
				    <%= link_to "Check out", sponsors_project_path(project.id), class:"btn btn-primary" %>
				  </div>
				</div>
			</div>
		<% end %>
	</div>


<% else %>
	<%= render partial: "sponsors/start" %>
<% end %>